@using ExampleSingleSignOn.Models.Client
@model ScopeViewModel

<li class="list-group-item">
    <h4>Scope Definition for: @Model.ScopeName</h4>
    <ul class="list-group">
        <li class="list-group-item"><h4>Scope Claims:</h4></li>
        @if (!Model.ClaimNames.Any())
        {
            <li class="list-group-item"><i>no claims found for scope "@Model.ScopeName"</i></li>
        }
        @foreach (var claim in Model.ClaimNames)
        {
            <li class="list-group-item">@claim</li>
        }
        <li class="list-group-item">
            <form asp-action="SaveScopeClaim" asp-controller="Client" method="post" asp-route-parent="@ViewBag.Parent">
                <input type="hidden" name="ScopeName" value="@Model.ScopeName" />
                <input type="hidden" name="ScopeType" value="@Model.ScopeType" />
                Add Claim <input type="text" name="ClaimName" /><button type="submit"><i class="fa fa-plus-circle"></i></button> to scope "@Model.ScopeName"
            </form>
        </li>
    </ul>
</li>
